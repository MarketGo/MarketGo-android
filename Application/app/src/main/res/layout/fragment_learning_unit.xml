<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        tools:context=".fragment.LearningUnitFragment"
        android:background="@drawable/theme_unit_background">

        <Button
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_margin="40dp"
            android:onClick="onUnitButtonClick"
            android:background="@drawable/hen_not_crown"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_margin="40dp"
            android:onClick="onUnitButtonClick"
            android:background="@drawable/hen_not_crown"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_margin="40dp"
            android:onClick="onUnitButtonClick"
            android:background="@drawable/hen_has_crown"/>
    </LinearLayout>
</layout>