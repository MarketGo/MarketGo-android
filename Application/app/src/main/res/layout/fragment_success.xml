<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="fragment"
            type="com.application.fragment.SuccessFragment" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".fragment.SuccessFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                tools:context=".fragment.SuccessFragment"
                android:background="@drawable/background_speak_draw_back">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="200dp"
                        android:layout_height="250dp"
                        android:layout_marginBottom="60dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/chicken_success" />

                    <ImageView
                        android:layout_width="218dp"
                        android:layout_height="139dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="200dp"
                        android:background="@drawable/success_buble"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                tools:context=".fragment.SpeakMainFragment"
                android:background="@drawable/background_speak_draw_front">

                <!--TODO: 정적으로 하기 위해 '모든 결과보기' -> 'NEXT'로 수정 - 지수190602 -->
                <Button
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:text="결과"
                    android:onClick="onResultButtonClick"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom"
                    android:textColor="#333"
                    android:fontFamily="@font/maplestory_light"
                    android:textSize="36sp"/>
            </LinearLayout>


        </FrameLayout>

    </LinearLayout>
</layout>