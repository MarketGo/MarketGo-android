<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="MainMenuFragment"
            type="com.application.fragment.MainMenuFragment" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".fragment.MainHeaderFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.AppCompat.Button"
                android:layout_width="172.3dp"
                android:layout_height="141.6dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/learning"
                android:onClick="onLearningButtonClick" />


            <Button
                style="@style/Widget.AppCompat.Button"
                android:layout_width="172.3dp"
                android:layout_height="141.6dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/game"
                android:onClick="onGameButtonClick" />

            <Button
                style="@style/Widget.AppCompat.Button"
                android:layout_width="227dp"
                android:layout_height="141.6dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/exercise"
                android:onClick="onExerciseButtonClick" />

        </LinearLayout>
    </LinearLayout>
</layout>